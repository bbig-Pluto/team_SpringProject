<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
 
<mapper namespace="mapper.shy">

	<select id="selectWishlist" resultType="wishlistDTO">
	
		select * from wishlist
	
	</select>
	
	<select id="pickWishlist" resultType="wishlistDTO">
	
		select * from wishlist
			where seqNum = #{seqNum}
	
	</select>
	
	<insert id="insertWishlist" parameterType="wishlistDTO">
	
		insert into wishlist
			(seqNum, category, name, photo, price, link)
			
		values
			(seq_list.nextval, 'null', #{name}, #{photo}, #{price}, #{link})
	
	</insert>
	
	<update id="updateWishlist" parameterType="wishlistDTO">
	
		update wishlist
			set category='a',
				name=#{name},
				photo='a',
				price=#{price},
				link=#{link}
			where SEQNUM = #{seqNum}
	
	</update>
	
	<delete id="deleteWishlist" parameterType="wishlistDTO">
	
		delete from wishlist
			where seqNum = #{seqNum}
		
	</delete>
	
</mapper>